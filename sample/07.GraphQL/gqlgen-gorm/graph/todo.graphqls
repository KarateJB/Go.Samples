scalar UUID

type Todo {
  id: UUID!
  title: String!
  isDone: Boolean!
  todoExt: TodoExt!
  userId: String
  user: User
  tags: [Tag!]
}

type TodoExt {
  id: UUID!
  description: String
  priorityId: Int
  priority: Priority
}

type Priority {
  id: Int
  name: String
}

type Tag {
  id: UUID!
  name: String!
}

input NewTodo {
  title: String!
  isDone: Boolean
  todoExt: NewTodoExt!
  userId: String!
  tags: [UUID!]
}

input EditTodo {
  id: UUID!
  title: String!
  isDone: Boolean
  todoExt: EditTodoExt
  tags: [UUID!]
  # userId: String!
}

input NewTodoExt {
  description: String
  priorityId: Int 
}

input EditTodoExt {
  description: String
  priorityId: Int
}